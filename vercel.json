{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "devCommand": "npm start",
  "installCommand": "npm install",
  "framework": "create-react-app",
  "env": {
    "REACT_APP_API_BASE_URL": {
      "description": "Backend API URL (from Google Cloud Run)",
      "value": "https://skillsync-backend-80934598149.us-central1.run.app/api"
    }
  },
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://skillsync-backend-80934598149.us-central1.run.app/api/:path*"
    }
  ]
}
